" restart Vimperator

" completion options
set complete=lsh
set defsearch="google"
set editor="/home/perry/.bin/vim-start.sh"
set focuscontent=true
set guioptions-=mTB
set history=1500
set newtab="help,downloads"
set titlestring=""


map <C-r> :restart<CR>
map <S-Space> :nohlsearch<CR>
 
" select next/previous tab
" map <C-l> gt
map gb gT
 
" move current tab left/right
map <C-l> :tabnext<CR>
map <C-h> :tabprev<CR>
" move current tab left/right
map <C-L> :tabmove! +1<CR>
map <C-H> :tabmove! -1<CR>
 
" add the bookmark star to vimperator's statusbar 
javascript <<EOF
(function(){
 var bookPanel = document.createElement("statusbarpanel");
 bookPanel.setAttribute("id", "book-panel-clone");
 bookPanel.appendChild(document.getElementById("star-button"));
 bookPanel.firstChild.setAttribute("style", "padding: 0; max-height: 16px;");
 document.getElementById("status-bar")
 .insertBefore(bookPanel, document.getElementById("security-button"));
 })();
EOF

 
