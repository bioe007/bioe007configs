" appearance
" set go-=nmbrT
" set go+=n
set gui=nonavigation,nomenu
set tabnumbers
" set showtabline=1

" completion options
set complete=lshb
set defsearch="google"
set editor="/home/perry/.bin/vim-start.sh"
set focuscontent=true
set history=1500
set newtab="help,downloads"
set titlestring=""

" search opts
set smartcase

set focuscontent

map Y :exe ":tinyurl "+getBrowser().contentWindow.location.href<CR>

map [[ <C-U>
map ]] <C-D>

" select next/previous tab
" map <C-l> gt
map < gT
map > gt

" focus left or right tab
map <C-l> :tabnext<CR>
map <C-h> :tabprev<CR>

" move current tab left/right
map <C-S-l> :tabmove! +1<CR>
map <C-S-h> :tabmove! -1<CR>
map <silent> <C-.> :tabmove! +1<CR>
map <silent> <C-,> :tabmove! -1<CR>

map j 4<c-e>
map k 4<c-y>

map c :quit<CR>

" add the bookmark star to vimperator's statusbar
javascript <<EOF
(function(){
 var bookPanel = document.createElement("statusbarpanel");
 bookPanel.setAttribute("id", "book-panel-clone");
 bookPanel.appendChild(document.getElementById("star-button"));
 bookPanel.firstChild.setAttribute("style", "padding: 0; max-height: 16px;");
 document.getElementById("tab-bar")
 .insertBefore(bookPanel, document.getElementById("security-button"));
 })();
EOF


