  text[PRELIGHT] = "#cfcfff"
}

style "tree" = "default"
{
  xthickness = 2
  ythickness = 2
  GtkTreeView::odd_row_color = "#3d3e3f" #ffffff"
  GtkTreeView::even_row_color = "#3d3e3f" #fcfcfc"
}

style "frame-title" = "default"
{
  fg[NORMAL] = "#404040"
}

