! {{{ URXVT 
URxvt*termName:         rxvt-256color
URxvt*loginShell:       false
URxvt*saveLines:        5500
URxvt*geometry:         180x25
! URxvt*meta8:            true   /* teh fail w/vim and irssi+screen */

/* places a hardcopy in home dir when print is pressed */
URxvt.print-pipe: cat > $(TMPDIR=$HOME mktemp urxvt.XXXXX)

! {{{ URLs mark-and-yank
URxvt*cutchars:         '`"()\'*<>[]{|}'
/* match left-mouse-button */
URxvt*matcher.button:   1                   
URxvt.keysym.M-u:       perl:mark-yank-urls:activate_mark_mode
URxvt.underlineURLs:    true
URxvt.perl-lib:         /home/perry/.urxvt/
URxvt.perl-ext:         selection,mark-yank-urls
URxvt.urlLauncher:      firefox
! }}}

! {{{ appearance
! URxvt*transparent:        true
URxvt.cursorBlink:        true
URxvt.cursorOnTime:       400
URxvt.cursorOffTime:      140

! {{{ FONT handling
Rxvt*font:               xft:Terminus:pixelsize=14:autohint=true
Rxvt*boldFont:           xft:Terminus:bold:pixelsize=14:bold:autohint=true
Xft.antialias: 1
Xft.hinting: 1
Xft.rgba: rgb
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight 
! }}}

URxvt*internalBorder:     3
URxvt*jumpScroll:         true
URxvt*scrollTtyOutput:    true
!URxvt*tintColor:          grey
!URxvt*shading:            10
!URxvt*fading:             0
!URxvt*fadeColor:          grey
URxvt*scrollBar:          False
!URxvt*scrollBar_floating:          scrollBar_floatingtrue
!URxvt*scrollBar_right:             scrollBar_rightfalse
!URxvt*scrollColor:                 #000000
!URxvt*inheritPixmap:      false
!URxvt*reverseVideo:       false

! Bloged http://www.jukie.net/~bart/blog/tag/urxvt

! }}}


